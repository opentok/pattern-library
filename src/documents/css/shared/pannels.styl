@import "shared_constants"

.pannel
  box-shadow inset 0 0 10px rgba(0,0,0,0.2)
  //background-color cream 
  padding 40px 0
  text-align center
  background-color #f9f9f9
  .big 
    display inline-block
    font-size 48px
    font-family font_avant
    color tb_blue 
    line-height 60px
    width 300px
    text-align left
  p
    padding-top 20px
    a
      margin 10px


/* ---------------
 *  tablet
 * ---------------*/
@media only screen and (min-width: 480px) and (max-width: 767px)
  .pannel
    .big
      position relative
      left -5px
      margin-bottom 20px
      width 500px
      text-align left
    p
      a
        width 250px
        margin 15px

/* ---------------
 * mobile only
 * ---------------*/
@media only screen and (max-width: 480px)
  .pannel
    .big
      text-align center
      margin-bottom 30px
    p
      a
        width  250px
        margin 15px
