@import "shared_constants"
mh_speed = 0.7s;
dark_gray = #181818;  
medium_gray = #303031;
fadded_white = rgba(255,255,255,0.3);

// icons
hiring_icon_2x = url("/img/icons/footer-careers_banner@2x.png");
divider_logo_icon_2x = url("/img/icons/footer-div_logo@2x.png");

base_size = 10;
footer
  background dark_gray
  a:hover
    text-decoration none
  ul
    margin 4px 0 5px 10px
  a,span
    display inline-block
    font-family font_avant_book
    color white
    font-size (base_size+2)px
    line-height (base_size+4)px

  .big
    display block
    color fadded_white
    font-size (base_size+4)px
    margin 30px 0
  .small
    color rgba(255,255,255,0.5)
    font-size (base_size)px
    line-height(base_size+1)px
  
  .columns
    & > ul
      margin-left 0px

  .newsletter
    position relative
    margin 20px 0
    input,a
      border-radius 3px
    input
      outline none
      width 75%
      height 28px
      background transparent
      border 1px solid white
      padding-left 10px
      color white
    a
      position absolute
      top 1px 
      right 0
      padding 7px 12px
      &:after
        margin 0px
      &:hover
        &:after
          margin 0 


  .hiring
    position relative
    &:after
      content ""
      display block
      position absolute
      width 89px 
      height 21px
      background-size 89px 21px
      background-image hiring_icon_2x
      right -202% 
      top -3px 
      margin-right -5px


  .socials
    width 100%
    a
      display inline-block
      width (100/6)%
      margin-right -5px
      text-decoration none
    a:not(:first-child):not(:last-child)
      text-align center
    a:last-child
      text-align right
    img
      width 26px
      height 26px

  .divider
    position relative
    border-bottom 1px solid fadded_white 
    overflow visible
    margin 30px 0
    &:before
      position absolute
      content ""
      display block 
      width 50px 
      height 30px
      background-size 21px 20px
      background-image divider_logo_icon_2x
      background-position center
      background-color dark_gray 
      background-repeat no-repeat
      left 50%
      margin-left -25px
      top -15px

  .logos
    padding-bottom 140px
    img
      margin-right 40px
    img:nth-child(2)
      position relative
      top -5px
      position block
    a,span
      text-decoration none
      font-family font_avant_book
      font-size (base_size)px
      margin-top 10px
    span 
      margin-left 5px
      margin-right 5px


    
