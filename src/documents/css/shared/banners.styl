@import "shared_constants"

.banner-announcement
  background crimson 
  padding 10px 0
  text-align center
  a
    height 14px
    line-height 14px
    font-size 14px

.banner-body
  padding 20px 0
  text-align center

.banner-blue
  background tb_blue
 
.banner-gray
  background state_gray 

.banner-rich-blue
  background rich_blue

 /* ------------------
 *  desktop
 * ------------------*/
@media only screen and (min-width: 767px)
  .banner-announcement
    a
      margin-left 30px

    h4
      display inline

  .banner-body
    a
      margin-left 30px
    h3
      display inline
/* ---------------
 *  tablet, mobile
 * ---------------*/
@media only screen and (max-width: 767px) 

  .banner-body
    a
      margin-top 20px

