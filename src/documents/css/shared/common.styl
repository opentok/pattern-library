@import "shared_constants"
@import "mixins"

.hidden
  display none

.inline-block
  display inline-block !important

.block
  display block !important

.clear
  &:after
    content ""
    display block
    clear both

//backgrounds
.bg-tb-blue
   background-color tb_blue !important

.btn,.btn-padding
  font-family font_avant_book
  display inline-block
  border-radius 0px
  text-align center
  line-height 50px
  tb_transition()
  font-size 16px
  height 50px
  border 0
  &:hover
    text-decoration none
    cursor pointer

.btn-padding
  padding 0 20px

.btn-bold
  font-family font_avant_medium


.btn-blue
  tb_btn_init(
    tb_blue,
    tb_blue,
    tb_medium_blue,
    white
  )
.btn-ghost-blue
  tb_btn_init(
    white,
    tb_blue,
    white,
    tb_blue 
  )
.btn-ghost-white
  tb_btn_init(
    transparent,
    white,
    transparent,
    white
  )
.btn-clear-dark
  tb_btn_init(
    transparent,
    transparent,
    transparent,
    dark_gray)
.btn-clear-blue
  tb_btn_init(
    transparent,
    transparent,
    transparent,
    tb_blue)

.btn-clear-light
  tb_btn_init(
    transparent,
    transparent,
    transparent,
    white)

.ctaarrow-white
  btn_ctaarrow(
    ctaarrow_white_2x,
    btn_icon_offset)

.ctaarrow-blue
  btn_ctaarrow(
    ctaarrow_blue_2x,
    btn_icon_offset)
.ctaarrow-gray
  btn_ctaarrow(
    ctaarrow_gray_2x,
    btn_icon_offset)

.ctaarrow-gray-left
  btn_ctaarrow_left(
    ctaarrow_gray_left_2x,
    btn_icon_offset)

.ctaarrow-letter-white
  btn_custom(
    ctaarrow_letter_white_2x,
    btn_icon_offset, 32,22 )

.ctaarrow-letter-blue
  btn_custom(
    ctaarrow_letter_blue_2x,
    btn_icon_offset, 32, 22)
.ctaarrow-play-blue
  btn_custom(
    ctaarrow_play_blue_filled_2x,
    btn_icon_offset, 32, 32
  )

