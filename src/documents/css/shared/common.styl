.ribon
  background tb_blue
  text-align center
  padding 25px
  line-height 36px
  span
    font-family font_avant_book
    color white
    font-size 20px
  a 
    width 250px


// sections
.section-header
  background-size 1277px 372px
  background-image dots_bg
  padding 30px 0
  text-align center
  border-bottom 2px solid tb_blue
  .container
    padding 0 !important
  strong,p
    font-size 20px
    line-height 36px
    color state_gray
  strong 
    font-family font_avant_medium 
  p
    font-family font_avant

// tabs
.tabs
  margin-top -30px
  .tab:not(:last-child) a
    border-right 2px solid white 
    margin-left -2px
  &:after
    content ""
    display block
    clear both
  .tab
    display block
    list-style none
    margin 0
    float left
    overflow hidden
    a
      background-color cream
      display block
      width 100%
      text-align center
      padding 10px 0
    
.three-tabs .tab
  width (100/3)%
.six-tabs .tab
  width (100/6)%


